<properties>
<property name="inputfile" value="D:/input.txt" />
<property name="outputfile" value="D:/output.txt" />
</properties>
    <step id="step1">
        <chunk>
            <reader ref="readFile"/>
            <jsl:processor ref="capitalizeLine"/>
            <writer ref="writeFile"/>
        </chunk>
    </step>
</job>